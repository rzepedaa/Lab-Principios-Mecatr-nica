const int temp= A0;
float grados=0;

void setup()
{
  Serial.begin(9600);
}
 
void loop()
{
  grados = (analogRead(temp) / 1023.0) * 500; //Rango es de -550mv a 1500mv
  Serial.print(grados);
  Serial.println("\n");
  delay(1000);
}
